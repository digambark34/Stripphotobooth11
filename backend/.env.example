# Backend Environment Variables Example
# Copy this file to .env and fill in your values

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/strip_photobooth
# For production, use your MongoDB Atlas or other cloud provider URL
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/strip_photobooth

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# CORS Settings
# For local development with React frontend
CORS_ORIGIN=http://localhost:3000
# For production with Netlify
# CORS_ORIGIN=https://your-app-name.netlify.app

# Authentication
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=7d

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=secret

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
